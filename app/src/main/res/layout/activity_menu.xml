<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".menu">
    
    <FrameLayout
        android:layout_width="@+id/fragment_container"

        android:layout_height="" />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-9dp"
        android:background="@drawable/rectangle"
        android:elevation="16dp"
        android:padding="8dp"
        app:cnb_menuResource="@menu/menu_button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="601dp"
        android:background="@drawable/custom_shape"
        android:fontFamily="@font/george"
        android:padding="15dp"
        android:text="My Friend Anuva"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="348dp"
        android:layout_marginBottom="329dp"
        android:background="@drawable/custom_shape"
        android:fontFamily="@font/george"
        android:padding="15dp"
        android:text="Book Session with Therapist"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="245dp"
        android:layout_marginBottom="433dp"
        app:srcCompat="@drawable/ic_anuva" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="208dp"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/george"
        android:text="I need to talk"
        android:textColor="@color/white"
        android:textSize="23dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="216dp"
        android:layout_marginTop="248dp"
        android:background="@color/teal_200"
        android:fontFamily="@font/georgebold"
        android:textSize="10dp"
        android:text="Talk now" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="87dp"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="473dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="135dp"
        app:srcCompat="@drawable/ic_therapist" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="163dp"
        android:layout_marginTop="476dp"
        android:fontFamily="@font/george"
        android:text="Book an appointment"
        android:textColor="@color/white"
        android:textSize="23dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="208dp"
        android:layout_marginTop="533dp"
        android:background="@color/teal_200"
        android:fontFamily="@font/georgebold"
        android:text="Book a session"
        android:textSize="10dp" />


</RelativeLayout>